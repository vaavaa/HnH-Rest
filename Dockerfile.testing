# Testing image: based on main Dockerfile, adds git (for hnh-core from VCS) and dev deps (pytest, etc.)

FROM ghcr.io/astral-sh/uv:0.9.12-bookworm AS uv

# -----------------------------------
# Single stage: deps + dev deps + project, run pytest
# -----------------------------------
FROM python:3.13-slim-bookworm AS testing
RUN apt-get update && apt-get install -y \
  gcc \
  g++ \
  git \
  && rm -rf /var/lib/apt/lists/*

ENV UV_COMPILE_BYTECODE=1
ENV UV_LINK_MODE=copy
ENV UV_PROJECT_ENVIRONMENT=/usr/local
ENV UV_PYTHON_DOWNLOADS=never
ENV UV_NO_MANAGED_PYTHON=1

WORKDIR /app/src

# Sync deps (incl. hnh-core from git â€” hence git above); no project yet
RUN --mount=from=uv,source=/usr/local/bin/uv,target=/bin/uv \
    --mount=type=cache,target=/root/.cache/uv \
    --mount=type=bind,source=uv.lock,target=uv.lock \
    --mount=type=bind,source=pyproject.toml,target=pyproject.toml \
    uv sync --locked --no-install-project --all-groups

COPY . .

# Install project + ensure dev groups
RUN --mount=from=uv,source=/usr/local/bin/uv,target=/bin/uv \
    --mount=type=cache,target=/root/.cache/uv \
    uv sync --locked --all-groups

CMD ["python", "-m", "pytest", "-vv", "--tb=short", "."]
